---
import { Image } from '@astrojs/image/components';
import foto from '../Assets/Foto.jpg';
import SocialLinks from './SocialLinks';
const { lang } = Astro.props;
---

<main
  class="relative mx-auto flex w-[90%] max-w-[400px] flex-col items-center justify-between xl:max-w-[1000px]">
  <div class="">
    <h1
      class="text-center font-title text-5xl text-white xsm:text-left xsm:text-6xl xl:text-[5rem]">
      Pablo Penalva
    </h1>
    <h2
      class="text-center font-title text-3xl text-secondary">
      {
        lang === 'en'
          ? 'Web Developer'
          : 'Desarrollador web'
      }
    </h2>
    <SocialLinks />
  </div>
  <Image
    format="webp"
    alt=""
    src={foto}
    width={400}
    height={343.19}
    quality={100}
    loading={'eager'}
    class="mt-10 w-full max-w-[360px] rounded-2xl grayscale"
  />
</main>
